<h1>List of all restaurants</h1>

<p><%=link_to 'Create a new restaurant', new_restaurant_path, class: "btn btn-primary"%></p>



<div class="container">

<% @restaurants.each do |restaurant| %>
<h3> <%= p restaurant.name %></h3>
<p><%= p restaurant.address %></p>
<p><%= p restaurant.category %></p>
<p><%=link_to 'Details', restaurant_path(restaurant), class: "btn btn-primary"%></p>
<% end %>

</div>
